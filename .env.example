# Example environment variables for Creative Hands
# Copy this file to `.env` and fill with your real secrets for local development.

# MongoDB connection (local or Atlas)
MONGODB_URI=mongodb://localhost:27017/creative-hands

# JWT settings
# Use a secure secret in production. This is just an example value.
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d

# Server
PORT=5000
NODE_ENV=development

# Frontend URL (used by CORS)
CLIENT_URL=http://localhost:5173

# Default admin account (created automatically at server start if not present)
ADMIN_NAME=Administrador
ADMIN_EMAIL=admin@creativehands.com
ADMIN_PASSWORD=Admin123!
