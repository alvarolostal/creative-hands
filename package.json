{
  "name": "creative-hands",
  "version": "1.0.0",
  "description": "Portal de productos artesanales con autenticación y chat en tiempo real",
  "main": "server/server.js",
  "scripts": {
    "server": "nodemon server/server.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,html}\"",
    "test": "jest --runInBand",
    "start": "node server/server.js",
    "build": "cd client && npm run build"
  },
  "keywords": [
    "artesanía",
    "ecommerce",
    "chat",
    "socket.io",
    "jwt"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "socket.io": "^4.6.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^8.12.1",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  }
}
